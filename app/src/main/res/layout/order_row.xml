<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardV"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/my4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:itemTextAppearance="@style/MyNavBarFontStyle">
        
        <ImageView
            android:id="@+id/img_preview"
            android:layout_width="@dimen/myImagePreview"
            android:layout_height="@dimen/myImagePreview"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/my8dp"
            android:src="@drawable/testimage" />
        <TextView
            android:id="@+id/txt_order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تست"
            android:textSize="@dimen/myLargeFont"
            android:layout_marginTop="@dimen/my18dp"
            android:typeface="monospace"
            android:layout_marginRight="@dimen/my8dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/img_preview"
            />
        <TextView
            android:id="@+id/txt_order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تست"
            android:typeface="monospace"
            android:textColor="@color/myBlue500"
            android:textSize="@dimen/myMediumFont"
            android:layout_marginTop="60dp"
            android:layout_marginRight="@dimen/my8dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/img_preview"
            />
        <TextView
            android:id="@+id/txt_order_location"
            android:typeface="monospace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تست"
            android:textSize="@dimen/myMediumFont"
            android:layout_marginTop="100dp"
            android:layout_marginRight="@dimen/my8dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/img_preview"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>
